{
  "name": "pet-accessories-chatbot-api",
  "version": "1.0.0",
  "description": "AI-powered chatbot API for pet accessories store with JWT authentication and intelligent product recommendations",
  "main": "src/index.js",
  "scripts": {
    "start": "node --env-file .env .\\src\\index.js",
    "dev": "node --env-file .env --watch .\\src\\index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run test",
    "docker:build": "docker build -t pet-chatbot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env pet-chatbot"
  },
  "keywords": [
    "chatbot",
    "api",
    "pet-accessories",
    "jwt",
    "express",
    "nodejs",
    "ai",
    "rag",
    "authentication"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tzincker/ai-challenge.git"
  },
  "author": "group70",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tzincker/ai-challenge/issues"
  },
  "homepage": "https://github.com/tzincker/ai-challenge#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fuse.js": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "ollama": "^0.5.16",
    "openai": "^5.11.0",
    "pug": "^3.0.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^30.0.5"
  }
}
