doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title="Pet Accessories Chatbot"
    link(rel='stylesheet', type='text/css', href='/styles.css')
  body
    div(class="container")
      div(class="pet-image")
        img(src="data:image/svg+xml;base64,", alt="Pet Chatbot Dog")
      h1="Pet Accessories Chatbot"
      div(id="login-section")
        h2="Login"
        input(type="text", id="username", placeholder="Username")
        input(type="password", id="password", placeholder="Password")
        button(type="button", id="login-btn")="Login"
        p(id="login-message")
        div(class="auth-links")
          a(href="/register")="Not a member, register now!"
          br
          a(href="#", id="forgot-password-link")="Forgot your password?"

      div(id="chat-section" class="hidden")
        h2="Chat"
        div(id="chat-box")
        div(class="chat-input")
          input(type="text", id="chat-message", placeholder="Type your message...")
          button(id="send-btn")="Send"
        button(id="logout-btn", class="logout-btn")="Logout"

      div(id="reset-password-section" class="hidden")
        h2="Reset Password"
        div(class="pet-image")
          img(src="data:image/svg+xml;base64,", alt="Reset Password Dog")
        p="Enter your username and new password:"
        div(class="form-group")
          input(type="text", id="reset-username", placeholder="Username", required)
          div(class="validation-message" id="username-validation")
        div(class="form-group")
          input(type="password", id="new-password", placeholder="New password", required)
          div(class="validation-info")
            small="• Minimum 8 characters"
            small="• At least one uppercase letter"
            small="• At least one lowercase letter" 
            small="• At least one number"
          div(class="validation-message" id="password-validation")
        div(class="form-group")
          input(type="password", id="confirm-password", placeholder="Confirm password", required)
          div(class="validation-message" id="confirm-validation")
        button(type="button", id="reset-password-btn")="Reset Password"
        p(id="reset-message")
        a(href="#", id="back-to-login-link")="Back to login"
    script.
      const CONFIG = { API_BASE_URL: "!{apiBaseUrl}", };
    script(src='/script.js')